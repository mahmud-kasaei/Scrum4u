{% extends "GhaenCollegeScrumBundle:Parent:layout.html.twig" %}

{% block stylesheet -%}
    <style>
        .centerclass{text-align: center}
    </style>
{% endblock %}
{% block container -%}
    <h1>مشاهده زمانبندی</h1>
<div class="row-fluid">
    <div class="span12">
        <div class="box">
            <div class="box-container-toggle">
                <div class="box-content">
                    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered bootstrap-datatable" id="datatable">
                        <thead>
                        <tr>
                            <th class="centerclass">کد</th>
                            <th class="centerclass">عنوان</th>
                            <th class="centerclass">طول زمانبندی</th>
                            <th class="centerclass">فاصله بین دو زمانبندی</th>
                            <th>توضیحات</th>
                        </tr>

                        </thead>
                        <tbody>
                        <tr>

                            <td>{{ entity.id }}</td>
                            <td>{{ entity.title }}</td>
                            <td>{{ entity.length }}</td>
                            <td>{{ entity.gap }}</td>
                            <td>{{ entity.description }}</td>
                        </tr>

                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('schedule') }}">
            برگشت به لیست
        </a>
    </li>
    <li>
        <a href="{{ path('schedule_edit', { 'id': entity.id }) }}">
            ویرایش
        </a>
    </li>
    <li>
        <form action="{{ path('schedule_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">حذف</button>
        </form>
    </li>
</ul>
{% endblock %}
