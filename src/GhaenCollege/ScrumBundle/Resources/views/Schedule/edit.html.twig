{% extends 'GhaenCollegeScrumBundle:Parent:layout.html.twig' %}

{% block stylesheet -%}{% endblock %}
{% block container %}
    <h1>ویرایش زمانبندی</h1>

    <form action="{{ path('schedule_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {#<input type="hidden" name="_method" value="PUT" />#}
        {#{{ form_widget(edit_form) }}#}
        {{ form_errors(edit_form) }}
        {{  form_widget(edit_form._token) }}
        <label>
            {{"schedule.title"|trans({},"schedule","fr") }}
        </label>
        {{ form_widget(edit_form.title) }}</br></br>
        <label>
            {{"schedule.description"|trans({},"schedule","fr") }}
        </label>
        {{ form_widget(edit_form.description) }}</br></br>
        <label>
            {{"schedule.gap"|trans({},"schedule","fr") }}
        </label>
        {{ form_widget(edit_form.gap) }}</br></br>
        <label>
            {{"schedule.length"|trans({},"schedule","fr") }}
        </label>
        {{ form_widget(edit_form.length) }}</br></br>
        <p>
            <button type="submit">ویرایش</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('schedule') }}">
            برگشت به لیست
        </a>
    </li>
    <li>
        <form action="{{ path('schedule_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">حذف</button>
        </form>
    </li>
</ul>
{% endblock %}
