{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Test</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
            <tr>
                <th>Setup</th>
                <td>{{ entity.setup }}</td>
            </tr>
            <tr>
                <th>Inputs</th>
                <td>{{ entity.inputs }}</td>
            </tr>
            <tr>
                <th>Setps</th>
                <td>{{ entity.setps }}</td>
            </tr>
            <tr>
                <th>Expectedresult</th>
                <td>{{ entity.expectedResult }}</td>
            </tr>
            <tr>
                <th>Actualresult</th>
                <td>{{ entity.actualResult }}</td>
            </tr>
            <tr>
                <th>Estimate</th>
                <td>{{ entity.estimate }}</td>
            </tr>
            <tr>
                <th>Createdate</th>
                <td>{{ entity.createDate }}</td>
            </tr>
            <tr>
                <th>Startdate</th>
                <td>{{ entity.startDate }}</td>
            </tr>
            <tr>
                <th>Enddate</th>
                <td>{{ entity.endDate }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('test') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('test_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('test_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
