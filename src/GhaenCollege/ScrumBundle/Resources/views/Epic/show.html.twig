{% extends "GhaenCollegeScrumBundle:Parent:layout.html.twig" %}
{% block stylesheet -%}{% endblock %}
{% block container -%}
    <h1>قابلیت کلی</h1>

    <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered bootstrap-datatable" id="datatable">
        <tbody>
            <tr>
                <th>کد</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>عنوان</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>توضیح</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('epic') }}">
            برگشت به لیست
        </a>
    </li>
    <li>
        <a href="{{ path('epic_edit', { 'id': entity.id }) }}">
            ویرایش
        </a>
    </li>
    <li>
        <form action="{{ path('epic_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">حذف</button>
        </form>
    </li>
</ul>
{% endblock %}
