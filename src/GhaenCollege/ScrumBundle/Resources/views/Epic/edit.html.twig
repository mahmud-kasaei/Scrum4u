{% extends "GhaenCollegeScrumBundle:Parent:layout.html.twig" %}

{% block stylesheet -%}{% endblock %}
{% block container %}
    <h1>ویرایش قابلیت کلی</h1>

    <form action="{{ path('epic_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {{ form_errors(edit_form) }}
        {{  form_widget(edit_form._token) }}
        <div class="row-fluid">
            <div class="span4">
                {{ form_widget(edit_form.description) }}
            </div>
            <div class="span2">
                <label>
                    {{"epic.description"|trans({},"epic","fr") }}
                </label>
            </div>

            <div class="span4">
                {{ form_widget(edit_form.title) }}
            </div>
            <div class="span2">
                <label>
                    {{"epic.title"|trans({},"epic","fr") }}
                </label>
            </div>
        </div>
        <p>
            <button type="submit">ویرایش</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('epic') }}">
            برگشت به لیست
        </a>
    </li>
    <li>
        <form action="{{ path('epic_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">حذف</button>
        </form>
    </li>
</ul>
{% endblock %}
