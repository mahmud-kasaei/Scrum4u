{% extends 'GhaenCollegeScrumBundle:Parent:administration_menu.html.twig' %}
{% block title %}
    <title>
        نمایش پروژه
    </title>
{% endblock %}
{% block stylesheet %}

{% endblock %}
{% block container -%}
    {% block notification %}
        {% if app.session.hasFlash('notice') %}
            {{ app.session.flash('notice') }}
        {% endif %}

    {% endblock %}
    <h1>مشاهده پروژه</h1>
    <div class="row-fluid">
        <div class="span12">
            <div class="box">
                <div class="box-container-toggle">
                    <div class="box-content">
                        <table cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered bootstrap-datatable" id="datatable">
                            <thead>
                            <tr>
                                <th>کد</th>
                                <th>عنوان</th>
                                <th>توضیحات</th>
                                <th>تاریخ ساخت</th>
                                <th>تاریخ شروع</th>
                                <th>تاریخ پایان</th>
                                <th>پروژه پدر</th>
                                <th>وضعیت</th>
                                <th>زمانبندی</th>
                                <th>سازنده</th>
                                {#<th> پدر</th>#}
                                <th>مالک پروژه</th>
                                {#<th>ارجاع</th>#}
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                <td><a href="{{ path('project_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                                <td>{{ entity.title }}</td>
                                <td>{{ entity.description }}</td>
                                <td>{{ entity.createDate }}</td>
                                <td>{{ entity.startDate }}</td>
                                <td>{{ entity.endDate }}</td>
                                <td>{{ entity.parent }}</td>
                                <td>{{ entity.status }}</td>
                                <td>{{ entity.schedule }}</td>
                                <td>{{ entity.builder }}</td>
                                {#<td>{{ entity.parent }}</td>#}
                                <td>{{ entity.productOwner }}</td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

        <ul class="record_actions">
    <li>
        <a href="{{ path('project') }}">
            برگشت به لیست
        </a>
    </li>
    <li>
        <a href="{{ path('project_edit', { 'id': entity.id }) }}">
            ویرایش
        </a>
    </li>
    <li>
        <form action="{{ path('project_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">حذف</button>
        </form>
    </li>
</ul>
{% endblock %}