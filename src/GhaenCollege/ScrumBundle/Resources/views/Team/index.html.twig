{% extends "GhaenCollegeScrumBundle:Parent:administration_menu.html.twig" %}
{% block container -%}
    <h1>لیست تیم ها</h1>
        <div class="row-fluid">
        {% for entity in entities %}
            {% if entity.getSystemAdmin().getUsername() == app.security.getToken().getUser().getUsername() %}
