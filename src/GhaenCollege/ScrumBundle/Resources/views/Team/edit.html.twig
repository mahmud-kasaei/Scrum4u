{% extends "GhaenCollegeScrumBundle:Parent:administration_menu.html.twig" %}
{% block stylesheet %}

{% endblock %}
{% block title %}
    <title>مدیریت تیم ها</title>
{% endblock %}
{% block container -%}

    <h1>ویرایش تیم</h1>

    <form action="{{ path('team_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        <input type="hidden" name="_method" value="PUT" />
        {#{{ form_widget(edit_form) }}#}
        {{ form_errors(edit_form) }}
        {{  form_widget(edit_form._token) }}
        <label>
            {{"team.title"|trans({},"team","fr") }}
        </label>
        {{ form_widget(edit_form.title) }}</br></br>
        <label>
            {{"team.description"|trans({},"team","fr") }}
        </label>
        {{ form_widget(edit_form.description) }}</br></br>
        <label>
            {{"team.members"|trans({},"team","fr") }}
        </label>
        {{ form_widget(edit_form.members) }}</br></br>
        <label>
            {{"team.scrum_master"|trans({},"team","fr") }}
        </label>
        {{ form_widget(edit_form.scrum_master) }}</br></br>
        <p>
            <button type="submit">ویرایش</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('team') }}">
            برگشت به لیست
        </a>
    </li>
    <li>
        <form action="{{ path('team_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">حذف</button>
        </form>
    </li>
</ul>
{% endblock %}
