            <div class="row-fluid">
                <div class="span4">
                    {{ form_widget(form.endDate) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.endDate"|trans({},"sprint","fr") }}
                    </label>
                </div>
                <div class="span4">
                    {{ form_widget(form.project) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.project"|trans({},"sprint","fr") }}
                    </label>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_widget(form.timeunit) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.timeunit"|trans({},"sprint","fr") }}
                    </label>
                </div>
                <div class="span4">
                    {{ form_widget(form.schedule) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.schedule"|trans({},"sprint","fr") }}
                    </label>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_widget(form.status) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.status"|trans({},"sprint","fr") }}
                    </label>
                </div>
                <div class="span4">
                    {{ form_widget(form.builder) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.builder"|trans({},"sprint","fr") }}
                    </label>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_widget(form.team) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.team"|trans({},"sprint","fr") }}
                    </label>
                </div>
                <div class="span4">
                    {{ form_widget(form.goal) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.goal"|trans({},"sprint","fr") }}
