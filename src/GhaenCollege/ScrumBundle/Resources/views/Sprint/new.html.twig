                <div class="span2">
                    <label>
                        {{"sprint.title"|trans({},"sprint","fr") }}
                    </label>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_widget(form.scrumMeetingTime) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.scrumMeetingTime"|trans({},"sprint","fr") }}
                    </label>
                </div>
                <div class="span4">
                    {{ form_widget(form.scrumMeetingPlace) }}
                </div>
                <div class="span2">
                    <label>
                        {{"sprint.scrumMeetingPlace"|trans({},"sprint","fr") }}
                    </label>
                </div>
            </div>

            <div class="row-fluid">
                <div class="span4">
                    {{ form_widget(form.createDate) }}
