                <div class="span2">
                    <label>
                        {{"sprint.startDate"|trans({},"sprint","fr") }}
                    </label>
                </div>
            </div>

        </div>
        {{ form_errors(form) }}
        {{  form_widget(form._token) }}


        <p>
            <button type="submit">ایجاد</button>
        </p>
    </form>

        <ul class="record_actions">
    <li>
        <a href="{{ path('sprint') }}">
            برگشت به لیست
        </a>
    </li>
</ul>
{% endblock %}
