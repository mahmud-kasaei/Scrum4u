{% extends "GhaenCollegeScrumBundle:Parent:layout.html.twig" %}

{% block stylesheet -%}

{% endblock %}
{% block container %}
    <h1>ایجاد اسپرینت</h1>

    <form action="{{ path('sprint_create') }}" method="post" {{ form_enctype(form) }}>
        {#{{ form_widget(form) }}#}
